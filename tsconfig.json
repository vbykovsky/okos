{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "jsx": "react",

    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",

    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "exclude": ["./src/example"],
  "include": ["./src"]
}
